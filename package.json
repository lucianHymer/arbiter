{
  "name": "arbiter-ai",
  "version": "1.0.0",
  "description": "Hierarchical AI orchestration system for extending Claude's effective context window",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "arbiter": "dist/index.js"
  },
  "files": [
    "dist",
    "assets"
  ],
  "keywords": [
    "claude",
    "ai",
    "orchestration",
    "agent",
    "anthropic",
    "tui",
    "cli"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:headless": "tsx src/test-headless.ts",
    "test:queue": "npx tsx src/test-queue-logic.ts",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --fix src/",
    "analyze:context": "tsx src/context-analyzer.ts",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "biome check --fix --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "fzf": "^0.5.2",
    "play-sound": "^1.1.6",
    "sharp": "^0.34.5",
    "terminal-kit": "^3.1.2",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^20.10.0",
    "@types/play-sound": "^1.1.2",
    "@types/terminal-kit": "^2.5.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}

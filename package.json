{
  "name": "arbiter-ai",
  "version": "1.0.0",
  "description": "Hierarchical AI orchestration system for extending Claude's effective context window",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "arbiter": "dist/index.js"
  },
  "files": [
    "dist",
    "assets"
  ],
  "keywords": [
    "claude",
    "ai",
    "orchestration",
    "agent",
    "anthropic",
    "tui",
    "cli"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test:headless": "tsx src/test-headless.ts",
    "test:queue": "npx tsx src/test-queue-logic.ts",
    "analyze:context": "tsx src/context-analyzer.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "sharp": "^0.34.5",
    "terminal-kit": "^3.1.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/terminal-kit": "^2.5.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
